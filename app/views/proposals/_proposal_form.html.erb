
<%= form_with(model: @proposal, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <%= f.label :content, 'Повідомлення' %>
  <%= f.text_area :content %>

  <%= f.label :duedate, 'Дата завершення' %>
  <%= f.datetime_select :duedate, class: 'form-control'  %>

  <%= f.label :price, 'Ціна ₴' %>
  <%= f.text_field :price, type: "number", style: "width: 90%; margin-right:20px;" %>
  

  <%= f.hidden_field :order_id %>

  <%= f.submit yield(:text_button), class: "btn btn-success" %>
<% end %>
