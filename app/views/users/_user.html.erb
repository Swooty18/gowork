<li class= "item">
  <div class="information">
    <div class="information_main">
      <% if user.avatar.attached? %>
        <image src="<%=(url_for(user.avatar))%>" style=" width:64px;">
      <% else %>
        <span><%= gravatar_for(user, size: 64) %></span>
      <% end %>
      <%= link_to "#{user.first_name} #{user.last_name}", user, class:"user_link" %>
    </div>
    <% if current_user.admin?%>
    <div class="information_add">
      <span class="activated">
        <%if user.activated %>
          Підтверджений: Так
        <% else %>
        Підтверджений: Ні
        <% end %>
      </span>
      <span class="admin">
        <%if user.admin? %>
          Адміністратор: Так
        <% else %>
          Адміністратор: Ні
        <% end %>
      </span>
    </div>
    <% end %> 
  </div>
  <div class="buttons">
  <% if current_user.admin? && !current_user?(user) %>
      <%= link_to 'Видалити', user, method: :delete, data: { confirm: "Ти впевнений?"}, class: "btn btn-danger" %>
  <% end %> 
  </div>
</li>