<% provide(:title, 'Мої замовлення') %>


<div class="orders">
  <h1>Мої замовлення (<%= @user.orders.count %>) </h1>
  <%= link_to 'Додати замовлення', new_order_path, class: "btn-lg btn-success button_class" %>
  <%= link_to 'Активні', user_orders_path(current_user, status: 'active'), class: "btn-lg btn-primary button_class" %>
  <%= link_to 'Виконуються', user_orders_path(current_user, status: 'doing'), class: "btn-lg btn-warning button_class" %>
  <%= link_to 'Завершені', user_orders_path(current_user, status: 'end'), class: "btn-lg btn-info button_class" %>
  <%= link_to 'Незавершені', user_orders_path(current_user, status: 'timeend'), class: "btn-lg btn-danger button_class" %>
<%= will_paginate @orders%>

<ul class="items">
  <% @orders.each do |order| %>
  <li id="order-<%= order.id %>" class="item">
    <div class="row">
      <div class="col-md-10">
        <div class="text">
          <span class="title">
            <%= link_to order.title, order %>
          </span>
          <span class="city"> 
            <b>Місто:</b> <%= order.city %>
          </span>
          <span class="timestamp"> 
            <b>Створено:</b> <%= order.created_at %>
          </span>
          <span class="timestamp"> 
            <b>Завершується:</b> <%= order.duedate %>
          </span>
        <span class="category">
          <b>Категорія:</b> <%= order.category.title %>
        </span>
        </div>
      </div>
      <div class="col-md-2">
        <% if current_user?(order.user) %> 
          <div class="buttons">
            <%= link_to "Видалити", order, method: :delete, data: { confirm: "Ти впевнений?" }, class: "btn btn-danger" %>
            <%= link_to "Редагувати", edit_order_path, class: "btn btn-warning" %>
          </div>
        <%end%>
      </div>
    </div>
  </li>
  <% end %>
</ul>

<%= will_paginate @orders%>
</div>
