<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title yield(:title) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]--> 
  </head>
  <body>
    <header>
      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <a class="logo" href="/">
              <div class="logo_img"><%= image_tag('icons/logo.png', alt: "logo_img", class: "logo_img-tag", style: "width:50px;" ) %></div>
              <div class="logo_title">GoWork</div>
            </a>
          </div>
          <div class="col-md-4">
              <ul class="menu menu_left">
                <li class="menu_item"><%= link_to 'Як це працює', '#', class: "menu_link" %></li>
                <li class="menu_item"><%= link_to 'Про нас', static_pages_about_path, class: "menu_link" %></li>
                <li class="menu_item"><%= link_to 'Допомога', static_pages_help_path, class: "menu_link" %></li>
              </ul>
          </div>
          <div class="col-md-5">
              <ul class="menu menu_right">
                <li class="menu_item"><%= link_to 'Увійти', '#', class: "menu_link" %></li>
                <li class="menu_item"><%= link_to 'Реєстрація', '#', class: "menu_link" %></li>
                <li class="menu_item"><%= link_to 'Додати замовлення', '#', class: "menu_link add_order" %></li>
              </ul>
          </div>
        </div>
      </div>
    </header>
    
    <div class="container">
      <%= yield %>
    </div>

    <hr>
    <footer>
      <div class="container">
        <div class="social">
          <a href="#">Facebook</a>
          <a href="#">Instagram</a>
          <a href="#">YouTube</a>
        </div>
        <div class="info">
          GoWork Website 2020
        </div>
        <div class="links">
          <%= link_to 'Як це працює', '#' %>
          <%= link_to 'Про нас', static_pages_about_path %>
          <%= link_to 'Допомога', static_pages_help_path %>
          </ul>
        </div>
      </div>
    </footer>
  </body>
</html>
